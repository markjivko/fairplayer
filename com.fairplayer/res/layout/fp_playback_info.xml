<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="@dimen/fp_playback_info_padding_top"
        android:paddingBottom="@dimen/fp_playback_info_padding_bottom"
        android:orientation="horizontal" >
        
        <com.fairplayer.ElementImageButton
            android:id="@+id/fp_repeat"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:scaleType="fitCenter" />
            
        <LinearLayout
            android:id="@+id/fp_playback_info_header"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:orientation="vertical" >
            
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/fp_queue_pos"
                    android:textSize="@dimen/fp_text_size_playback_queue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:gravity="center" />
                
                <TextView
                    android:id="@+id/fp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fp_text_size_playback_title"
                    android:layout_marginLeft="@dimen/fp_row_text_indent"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:gravity="center"
                    android:textStyle="bold" />
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal" >
                
                <TextView 
                    android:id="@+id/fp_artist"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:ellipsize="marquee"
                    android:textSize="@dimen/fp_text_size_playback_subtitle"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center" />
                
            </LinearLayout>
            
        </LinearLayout>
        
        <com.fairplayer.ElementImageButton
            android:id="@+id/fp_shuffle"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:scaleType="fitCenter" />
            
    </LinearLayout>
</merge>