<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/fp_sliding_tab_icon_padding"
    android:paddingRight="@dimen/fp_sliding_tab_icon_padding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/image_view"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/fp_sliding_tab_icon_size"
        android:layout_height="@dimen/fp_sliding_tab_icon_size"
        android:layout_marginRight="@dimen/fp_sliding_tab_icon_indent"
        android:layout_gravity="center_vertical" />
    
    <TextView
        android:id="@+id/text_view"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left" />
    
</LinearLayout>