<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleFullScreen" parent="android:Theme.Holo.Light">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="StyleActionBar" parent="android:Theme.Holo.Light">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>
    <style name="ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:displayOptions">showTitle|homeAsUp</item>
    </style>
    <style name="ShowcaseView">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>
        <item name="sv_backgroundColor">#eeffffff</item>
        <item name="sv_showcaseColor">#ff34bde4</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">
        <item name="android:textColor">#ff1f88ce</item>
    </style>
    <style name="ShowcaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/fp_tutorial_button</item>
    </style>
</resources>